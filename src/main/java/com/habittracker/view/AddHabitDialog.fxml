<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.habittracker.controller.AddHabitDialogController">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding><Insets topRightBottomLeft="10"/></padding>
            <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Description" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="descField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="3"/>
            <Label text="Target per week" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Spinner fx:id="targetSpinner" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</DialogPane>
